module winner_selection
	#(parameter NUM_NODES = 1)
	(input  logic clk_i,
	 input  logic rst_i,
	 input  logic [NUM_NODES - 1:0] nodes_i,
	 output logic spike_o);

	logic node_c;

	generate
		if(NUM_NODES == 1) begin
			assign node_c = nodes_i[0];
		end else if(NUM_NODES > 1) begin
			assign node_c = |nodes_i;
		end
	endgenerate
endmodule winner_selection
